<div class="spot-container">
  <h3 class="spot-subheader-small"><%= t("my_account.access_tokens.api.title") %></h3>
  <div class="spot-divider"></div>
  <p class="spot-body-big">
    <%= t("my_account.access_tokens.api.text_hint") %>
  </p>
  <div class="spot-body-big">
    <% if Setting.rest_api_enabled? %>
      <% if api_tokens.any? %>
        <div class="generic-table--container">
          <div class="generic-table--results-container">
            <table id="access-token-table" class="generic-table">
              <%= render partial: "my/access_token_partials/token_table_header",
                         locals: {
                           column_headers: [
                             t('attributes.name'),
                             User.human_attribute_name(:created_at),
                             t('my_account.access_tokens.headers.expiration')
                           ]
                         }
              %>
              <tbody>
              <% api_tokens.each do |api_token| %>
                <tr>
                  <td style="width: 60%;"><%= t("my_account.access_tokens.api.static_token_name") %></td>
                  <td>
                    <span title="<%= format_time(api_token.created_at) %>">
                      <%= format_time(api_token.created_at.to_s) %>
                    </span>
                  </td>
                  <td><%= t('my_account.access_tokens.indefinite_expiration') %></td>
                  <td style="text-align: right;">
                    <%= link_to "",
                                {
                                  controller: :my,
                                  action: 'revoke_api_key',
                                  token_id: api_token.id
                                },
                                method: :delete,
                                class: 'icon icon-delete' %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
      <%= link_to({ action: 'generate_api_key' }, method: :post, class: 'spot-link') do %>
        <span class="spot-icon spot-icon_add"></span>
        <span><%= t('my_account.access_tokens.api.static_token_name') %></span>
      <% end %>
    <% else %>
      <div tabindex="0" class="-info op-toast">
        <div role="alert" aria-atomic="true" class="op-toast--content">
          <p>
            <span><%= t('my_account.access_tokens.api.disabled_text') %></span>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>


