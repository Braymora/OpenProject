<turbo-frame id="<%=dom_id(meeting_agenda_top)%>" class="meeting-agenda-top d-flex flex-justify-between my-3">
  <div>
    <%= form_with(
      model: meeting_agenda_top, 
      method: :put, 
      url: meeting_agenda_top_path(meeting_agenda_top.meeting, meeting_agenda_top),
      ) do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Name", class: 'form-control mb-2' %>
        <div class="d-flex flex-items-center">
          <%= f.number_field :duration_in_minutes, placeholder: "Duration in minutes", class: 'form-control' %>
          <span>min</span>
        </div>
      </div>

      <div class="actions mb-2">
        <%= f.submit %>
      </div>
    <% end %>
    <%= button_to 'Cancel', meeting_agenda_top_path(meeting_agenda_top), method: :get, data: { confirm: 'Are you sure?', "turbo-stream": true } %>
  </div>
</turbo-frame>
