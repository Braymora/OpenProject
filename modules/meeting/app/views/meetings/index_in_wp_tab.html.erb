<turbo-frame id="work-package-meetings-tab-content" data-turbo="true">
  <%= 
    render(Primer::Beta::Text.new(font_size: 4, color: :subtle, font_weight: :bold, tag: :div, mb: 3)) do 
      "Upcoming meetings"
    end 
  %>  
  <% if @upcoming_meetings.any? %>
    <%= render(WorkPackageTab::Meetings::ListComponent.new(meetings: @upcoming_meetings, active_work_package: @active_work_package)) %>
  <% else %>
    <%= render(Primer::Beta::Text.new(font_size: 6, color: :subtle, tag: :div, mb: 3)) do 
      "No upcoming meetings found"
    end %>
  <% end %>
  <% if @open_agenda_items.any? %>
    <%= 
      render(Primer::Beta::Text.new(font_size: 4, color: :subtle, font_weight: :bold, tag: :div, mt: 5, mb: 3)) do 
        "Summary of open clarification needs"
      end 
    %>
    <%= render(WorkPackageTab::MeetingAgendaItems::ListComponent.new(work_package: @active_work_package, meeting_agenda_items: @open_agenda_items)) %>
  <% end %>
  <% if @discussed_agenda_items.any? %>
    <%= 
      render(Primer::Beta::Text.new(font_size: 4, color: :subtle, font_weight: :bold, tag: :div, mt: 5, mb: 3)) do 
        "Summary of resolved clarifications"
      end 
    %>
    <%= render(WorkPackageTab::MeetingAgendaItems::ListComponent.new(work_package: @active_work_package, meeting_agenda_items: @discussed_agenda_items)) %>
  <% end %>
</turbo-frame>